<%- include('partials/header.ejs') %>
<h1>Categories view</h1>

<% if (categories) {%>
                   
    <% categories.forEach( category => { %>
        <table>
            <tr>
                <td><%= JSON.stringify(category) %></td>
            </tr>
            <tr>
                <td>Name: <%= category.name %></td>
            </tr>
            <tr>
                <td>Description: <%= category.description %></td>
            </tr>
        </table>
        <a href="/categories/<%= category._id %>">Details</a>
        <a href="/categories/<%= category._id %>/update">Update</a>
        <a href="/categories/<%= category._id %>/delete">Delete</a>

        <% }) %>
    <% } %>